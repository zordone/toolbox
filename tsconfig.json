{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "allowJs": false,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
