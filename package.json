{
  "name": "toolbox",
  "version": "1.0.1",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ace-builds": "^1.4.12",
    "copy-to-clipboard": "^3.3.1",
    "lodash": "^4.17.19",
    "moment": "^2.27.0",
    "react-ace": "^9.1.1",
    "react-hotkeys-hook": "^2.1.4",
    "react-json-view": "^1.19.1",
    "react-split-pane": "^0.1.91",
    "react-toastify": "^6.0.8",
    "safer-eval": "^1.3.6",
    "styled-components": "^5.1.1",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "concurrently": "^5.2.0",
    "electron": "^9.1.1",
    "electron-devtools-installer": "^3.1.1",
    "wait-on": "^5.1.0",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "dev": "PORT=3100 concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
    "electron": "wait-on tcp:3100 && electron-forge start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make",
    "generate-app-icon": "npx electron-icon-maker --input=/Users/zord/Development/toolbox-electron/_work/icon.png --output=src"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/mac/icon.icns",
        "name": "Toolbox",
        "ignore": [
          "/_work$",
          ".md$"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "toolbox"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
